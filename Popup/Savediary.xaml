<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="Righthere_Demo.Popup.Savediary"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="False">

    <toolkit:Popup.Size>
        <Size Width="300" Height="180" />
    </toolkit:Popup.Size>
    <VerticalStackLayout Padding="20" Spacing="15" BackgroundColor="#FFF8E8">
        <Label
            FontSize="30"
            HorizontalOptions="Start"
            Text="Before You Go..." />

        <Label
            FontSize="Body"
            HorizontalOptions="Start"
            Text="____________________________________________" 
            TextColor="LightGray"
            Margin="30"/>

        <Label
            FontSize="18"
            Margin="10"
            HorizontalOptions="Start"
            Text="Do you want to keep this entry, or would you like to let it go?"/>

        <Label
            FontSize="18"
            Margin="10"
            HorizontalOptions="Start"
            Text="Keeping or letting go, both are acts of self-love."/>

        <Label
            FontSize="18"
            Margin="10"
            HorizontalOptions="Start"
            Text="Trust your heartâ€”it knows what you need."/>

            

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <Button 
                Clicked="OnYesClicked" 
                Text="Keep it" 
                TextColor="#FFFFFF"
                CornerRadius="7"
                BackgroundColor="#F1B24A"/>
            
            <Button 
                Clicked="OnNoClicked" 
                TextColor="#F1B24A"
                Text="Let it go"
                BorderColor="#F1B24A"
                CornerRadius="7"
                BackgroundColor="Transparent"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</toolkit:Popup>
