<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="Righthere_Demo.Popup.Savediary"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="False">

    <toolkit:Popup.Size>
        <Size Width="320"
              Height="300"/>
    </toolkit:Popup.Size>

    <Frame
        CornerRadius="20"
        Padding="0"
        HasShadow="True"
        BackgroundColor="#FFF8E8">

        <VerticalStackLayout Padding="20"
                             Spacing="12">
            <!-- Heading -->
            <Label
                FontSize="22"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                Text="Before You Go..."
                TextColor="#333"/>

            <!-- Line -->
            <BoxView
                HeightRequest="1"
                Color="LightGray"
                HorizontalOptions="Fill"
                Margin="0,0,0,10"/>

            <!-- Body Texts -->
            <Label
                FontSize="13"
                TextColor="#444"
                HorizontalTextAlignment="Start"
                Text="Do you want to keep this entry, or would you like to let it go?"/>

            <Label
                FontSize="13"
                TextColor="#444"
                HorizontalTextAlignment="Start"
                Text="Keeping or letting go, both are acts of self-love."/>

            <Label
                FontSize="13"
                TextColor="#444"
                HorizontalTextAlignment="Start"
                Text="Trust your heartâ€”it knows what you need."/>

            <!-- Buttons -->
            <HorizontalStackLayout HorizontalOptions="Center"
                                   Margin="10,20,10,0"
                                   Spacing="20">
                <Button
                    Clicked="OnYesClicked"
                    Text="Keep it"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="100"
                    BackgroundColor="#F1B24A"/>

                <Button
                    Clicked="OnNoClicked"
                    Text="Let it go"
                    TextColor="#F1B24A"
                    WidthRequest="100"
                    CornerRadius="10"
                    BackgroundColor="Transparent"
                    BorderColor="#F1B24A"
                    BorderWidth="1"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
