<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="Righthere_Demo.Views.ColorPage"
             Title="ColorPage">

       <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFFFF" Offset="0.1" />
            <GradientStop Color="#FFFFFF" Offset="1.0" />
        </LinearGradientBrush>
       </ContentPage.Background>

       <VerticalStackLayout Padding="20"
                            Spacing="20">
              <Label Text="แตะที่วงล้อเพื่อเลือกสี"
                     FontSize="18"
                     HorizontalOptions="Center"/>

              <skia:SKCanvasView
                     x:Name="ColorWheelCanvas"
                     PaintSurface="OnCanvasViewPaintSurface"
                     EnableTouchEvents="True"
                     Touch="OnCanvasTouched"
                     HeightRequest="300"
                     WidthRequest="300"/>

              <BoxView x:Name="SelectedColorBox"
                       HeightRequest="50"
                       WidthRequest="100"/>

              <Label Text="คะแนนความใกล้เคียงกับอารมณ์ของคุณ"
                     FontSize="16"/>

              <Slider x:Name="scoreSlider"
                      Minimum="0"
                      Maximum="10"
                      Value="5"
                      ValueChanged="OnScoreChanged"/>

              <Label x:Name="scoreLabel"
                     Text="คะแนน: 5"
                     FontSize="14"
                     HorizontalOptions="Center"/>

              <Button Text="Confirm"
                      Clicked="OnConfirmClicked"/>
       </VerticalStackLayout>
</ContentPage>