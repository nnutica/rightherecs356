<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
    x:Class="Righthere_Demo.Views.DashboardPage"
    Title="Mood Dashboard">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#D7E7FF"
                          Offset="0.1"/>
            <GradientStop Color="#2A614E"
                          Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto"
              ColumnDefinitions="*">


            <!-- Row 1: Title -->
            <Label Grid.Row="0"
                   Padding="15"
                   Background="#2a614e"
                   FontAttributes="Bold"
                   FontSize="24"
                   HeightRequest="70"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Text="Weekly Mood Summary"
                   TextColor="White"
                   VerticalOptions="Center"
                   WidthRequest="420"/>

                        <!-- Row 3: Tree Image -->
            <Image
                x:Name="TreeImage"
                Source="empty.png"
                HeightRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.Row="1"
                Margin="0,10"/>

            <!-- Row 2: Charts -->
            <Grid Grid.Row="2"
                  ColumnDefinitions="*,*"
                  RowDefinitions="Auto">

                <!-- Donut Chart -->
                <!-- <Frame Grid.Column="0"
                       BackgroundColor="White"
                       CornerRadius="15"
                       Padding="15"
                       WidthRequest="180"
                       HeightRequest="350"
                       HasShadow="True">
                    <charts:ChartView
                        x:Name="DonutChart"
                        HeightRequest="300"
                        WidthRequest="120"/>
                </Frame> -->

                <!-- Horizontal Bar Chart -->
                <Frame Grid.Column="1"
                       BackgroundColor="White"
                       CornerRadius="15"
                       Padding="15"
                       WidthRequest="180"
                       HeightRequest="350"
                       HasShadow="True">
                    <charts:ChartView
                        x:Name="BarChart"
                        HeightRequest="300"
                        WidthRequest="120"/>
                </Frame>
            </Grid>

        </Grid>
    </ScrollView>
</ContentPage>
