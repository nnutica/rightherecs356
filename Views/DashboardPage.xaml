<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
    x:Class="Righthere_Demo.Views.DashboardPage"
    Title="Mood Dashboard">
    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto"
              ColumnDefinitions="*">

            <!-- Row 1: Title -->
            <Label
                Text="Weekly Mood Summary"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Grid.Row="0"
                Margin="0,10"/>

            <!-- Row 2: Charts -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="*,*">
                <!-- Donut Chart -->
                <charts:ChartView
                    x:Name="DonutChart"
                    HeightRequest="300"
                    Grid.Column="0"/>

                <!-- Horizontal Bar Chart -->
                <charts:ChartView
                    x:Name="BarChart"
                    HeightRequest="300"
                    WidthRequest="80"
                    Grid.Column="1"/>
            </Grid>

            <!-- Row 3: Tree Image -->
            <Image
                x:Name="TreeImage"
                Source="empty.png"
                HeightRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.Row="2"
                Margin="0,10"/>
        </Grid>
    </ScrollView>
</ContentPage>
