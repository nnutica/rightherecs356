<ContentPage
    x:Class="Righthere_Demo.Views.DiaryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="DiaryPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.1" Color="#D7E7FF" />
            <GradientStop Offset="1.0" Color="DeepSkyBlue" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="20">

        <!--  Reason Selection  -->
        <Frame
            Margin="0,0,0,10"
            Padding="10"
            BackgroundColor="White"
            CornerRadius="20"
            HasShadow="True"
            WidthRequest="350">
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        Text="Reason :"
                        VerticalOptions="Center" />

                    <Button
                        Padding="5,2"
                        BackgroundColor="DarkGreen"
                        CornerRadius="10"
                        Text="friend"
                        TextColor="White"
                        WidthRequest="60" />

                    <Button
                        Padding="5,2"
                        BackgroundColor="LightGray"
                        CornerRadius="10"
                        Text="work"
                        TextColor="DarkGray"
                        WidthRequest="60" />

                    <Button
                        Padding="5,2"
                        BackgroundColor="LightGray"
                        CornerRadius="10"
                        Text="family"
                        TextColor="DarkGray"
                        WidthRequest="60" />

                    <Button
                        Padding="5,2"
                        BackgroundColor="LightGray"
                        CornerRadius="10"
                        Text="school"
                        TextColor="DarkGray"
                        WidthRequest="60" />
                </HorizontalStackLayout>
            </ScrollView>
        </Frame>

        <!--  Entry Field  -->
        <Frame
            Margin="0,0,0,10"
            Padding="10"
            BackgroundColor="White"
            CornerRadius="20"
            HasShadow="True"
            WidthRequest="350">
            <Entry
                x:Name="DiaryEntry"
                BackgroundColor="White"
                HeightRequest="300"
                Placeholder="share something good..."
                TextColor="Black"
                VerticalOptions="Start"
                VerticalTextAlignment="Start"
                WidthRequest="330" />
        </Frame>

        <!--  ✅ Loading Indicator  -->
        <ActivityIndicator
            x:Name="LoadingIndicator"
            Margin="10"
            IsRunning="False"
            IsVisible="False"
            Color="Blue" />

        <!--  ✅ ปุ่ม Next  -->
        <Button
            x:Name="AnalyzeButton"
            Margin="0,350,0,20"
            BackgroundColor="Transparent"
            Clicked="OnAnalyzeClicked"
            FontSize="16"
            HorizontalOptions="Center"
            Text="Next ➤"
            TextColor="Black" />
    </VerticalStackLayout>
</ContentPage>
