<ContentPage
    x:Class="Righthere_Demo.Views.DiaryHistoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Diary History">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Offset="0.1"
                          Color="#FFEEF2"/>
            <GradientStop Offset="1.0"
                          Color="#D0E8FF"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="20">
        <Label
            FontAttributes="Bold"
            FontSize="24"
            HorizontalOptions="Center"
            Text="ðŸ“˜ My Diary"/>

        <CollectionView
            x:Name="DiaryListView"
            SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="0,5"
                        Padding="10"
                        BackgroundColor="White"
                        CornerRadius="12"
                        HasShadow="True">
                        <VerticalStackLayout>
                            <Label
                                Text="{Binding CreatedAt, StringFormat='à¸§à¸±à¸™à¸—à¸µà¹ˆ: {0:dd MMM yyyy}'}"
                                FontAttributes="Bold"
                                FontSize="16"
                                TextColor="DarkSlateBlue"/>

                            <Label
                                Text="{Binding Content}"
                                FontSize="14"
                                TextColor="Black"/>

                            <Label
                                Text="{Binding Mood, StringFormat='Mood: {0}'}"
                                FontSize="12"
                                TextColor="DarkOliveGreen"/>

                            <Label
                                Text="{Binding SentimentScore, StringFormat='Sentiment: {0:F2}'}"
                                FontSize="12"
                                TextColor="Gray"/>

                            <Label
                                FontSize="12"
                                Text="{Binding Suggestion}"
                                TextColor="Gray"
                                FontAttributes="Italic"
                                Margin="0,5,0,0"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
