<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Righthere_Demo.Views.DiaryHistoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:converters="clr-namespace:Righthere_Demo.Services"
    Title="Diary History"
    BackgroundColor="#FAFAFA">

    <ContentPage.Resources>
        <converters:MoodToColorConverter x:Key="MoodToColorConverter"/>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="15">
            <Label
                FontAttributes="Bold"
                FontSize="26"
                HorizontalOptions="Center"
                Text="ðŸ“˜ My Diary Agenda"/>

            <CollectionView
                x:Name="DiaryListView"
                ItemsSource="{Binding GroupedDiaries}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <toolkit:Expander>
                            <toolkit:Expander.Header>
                                <Grid Padding="10">
                                    <BoxView
                                        HeightRequest="50"
                                        CornerRadius="10"
                                        BackgroundColor="{Binding Mood, Converter={StaticResource MoodToColorConverter}}"
                                        HorizontalOptions="Fill"
                                        VerticalOptions="Center"/>

                                    <Label
                                        Text="{Binding Date, StringFormat='  {0:dddd, dd MMM yyyy}'}"
                                        FontAttributes="Bold"
                                        TextColor="White"
                                        FontSize="16"
                                        VerticalOptions="Center"
                                        Margin="15,0,0,0"/>
                                </Grid>
                            </toolkit:Expander.Header>

                            <VerticalStackLayout Padding="10"
                                                 Spacing="10">
                                <CollectionView ItemsSource="{Binding Diaries}"
                                                SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame
                                                Padding="12"
                                                BackgroundColor="White"
                                                CornerRadius="14"
                                                HasShadow="True">

                                                <Frame.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnDiaryTapped"
                                                                          CommandParameter="{Binding .}"/>
                                                </Frame.GestureRecognizers>

                                                <VerticalStackLayout Spacing="6">
                                                    <Label
                                                        Text="{Binding Content}"
                                                        FontSize="14"
                                                        TextColor="Black"/>

                                                    <Label
                                                        Text="{Binding Mood, StringFormat='Mood: {0}'}"
                                                        FontSize="12"
                                                        TextColor="#2E8B57"/>

                                                    <Label
                                                        Text="{Binding Reason, StringFormat='Reason: {0}'}"
                                                        FontSize="12"
                                                        TextColor="#696969"/>
                                                </VerticalStackLayout>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                            </VerticalStackLayout>
                        </toolkit:Expander>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
